{
	"name": "Checkita DQ Dev Container",
	"image": "mcr.microsoft.com/devcontainers/java:1-17-bullseye",
	"features": {
		"ghcr.io/devcontainers/features/aws-cli:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.12",
			"installPath": "/usr/local/python"
		},
		"ghcr.io/devcontainers-extra/features/spark-sdkman": {
			"version": "3.5.6",
			"jdkVersion": "17",
			"jdkDistro": "ms"
		}
	},
	"customizations": {
		"jetbrains": {
			"backend": "IntelliJ",
			"plugins": [
				"org.intellij.scala"
			]
		},
		"vscode": {
			"settings": {
				"files.eol": "\n",
				"files.trimTrailingWhitespace": true,
				"editor.fontSize": 12,
				"editor.fontFamily": "JetBrains Mono",
				"editor.formatOnSave": true,
				"[scala]": {
					"editor.defaultFormatter": "scalameta.metals"
				},
				"metals.autoImportBuilds": "initial"
			},
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"scalameta.metals",
				"scala-lang.scala",
				"vscjava.vscode-java-pack",
				"usernamehw.errorlens",
				"aws-toolkit.aws-toolkit",
				"tamasfe.even-better-toml"
			]
		}
	},
	"forwardPorts": [
		4040 // Spark UI
	],
	"remoteUser": "vscode"
}